@@ -44160,6 +44160,9 @@
 			domNode.addEventListener("mousedown", function() { //$NON-NLS-0$
 				this.setActiveEditorView(this.editorView);
 			}.bind(this), true);
+			domNode.addEventListener("focus", function() { //$NON-NLS-0$
